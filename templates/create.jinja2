{% extends 'base.jinja2' %}

{% block subtitle %}Create new donation{% endblock subtitle %}

{% block content %}
    <form method="POST">
	{% if error %}<p>{{ error }}</p>{% endif %}
	<label for="name-input">Donor: </label><input id="name-input" type="text" name="name">
	<label for="donation-input">Donation: </label><input id="donation-input" type="number" name="value">
	<input type="submit" value="Create Donation">
    </form>
{% endblock content %}

